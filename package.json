{
  "name": "module-compat",
  "version": "0.1.0",
  "description": "Module type detection and loading for CJS and ESM compatibility",
  "keywords": [
    "module",
    "esm",
    "cjs",
    "commonjs",
    "import",
    "require",
    "compatibility",
    "loader"
  ],
  "homepage": "https://github.com/kmalakoff/module-compat",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kmalakoff/module-compat.git"
  },
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff@gmail.com> (https://github.com/kmalakoff)",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index.js",
  "source": "src/index.ts",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsds build",
    "format": "tsds format",
    "prepublishOnly": "tsds validate",
    "test": "tsds test:node --no-timeouts",
    "test:engines": "nvu engines tsds test:node --no-timeouts",
    "version": "tsds version"
  },
  "dependencies": {
    "module-root-sync": "*"
  },
  "devDependencies": {
    "@types/mocha": "*",
    "@types/node": "*",
    "node-version-use": "*",
    "ts-dev-stack": "*",
    "tsds-config": "*"
  },
  "engines": {
    "node": ">=0.8"
  }
}
